root = true

[*.cs]
# Indentation using a tab equivalent to 4 spaces
indent_style = tab
indent_size = 4
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true

# Switch cases are indented unless the contents are blocks
csharp_indent_case_contents = true
csharp_indent_case_contents_when_block = false

# Always surround single-statement blocks with braces
csharp_prefer_braces = true

# Require explicit access modifiers
dotnet_style_require_accessibility_modifiers = always:suggestion

# Display external references at the bottom
dotnet_sort_system_directives_first = true

# Use pattern-matching shorthand where appropriate
dotnet_style_prefer_is_null_check_over_reference_equality_method = true:suggestion
csharp_style_pattern_matching_over_is_with_cast_check = true:suggestion
csharp_style_pattern_matching_over_as_with_null_check = true:suggestion
csharp_style_inlined_variable_declaration = true:suggestion

# Suggest explicit type names "String.Empty" over "string.Empty"
dotnet_style_predefined_type_for_member_access = false:suggestion
dotnet_style_predefined_type_for_locals_parameters_members = false:suggestion

# Suggest adding "readonly" when fields appear immutable
dotnet_style_readonly_field = true:suggestion

# Preferred shorthand
csharp_style_conditional_delegate_call = true:suggestion
csharp_prefer_simple_default_expression = true:suggestion

# Member qualification
dotnet_style_qualification_for_field = true:none
dotnet_style_qualification_for_property = true:none
dotnet_style_qualification_for_method = true:none
dotnet_style_qualification_for_event = true:none